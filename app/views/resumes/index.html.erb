<!-- FULL RESUME -->
<div id="lg">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1 desc">
        <h1>Work Experience</h1><br>

        <%= render @resumes %>

        <div class="form-group">
          <%= direct_upload_form_for @uploader do |f| %>
            <%= f.label :image %>
            <%= f.file_field :image, class: "form-control" %>
            <%= f.submit "Upload Image", class: "btn btn-green" %>
          <% end %>
        </div>

        <br />

        <p class="btn btn-default"><%= link_to 'New Resume', new_resume_path %></p>

      </div>
    </div><!-- row -->
  </div><!-- container -->
</div><!-- lg -->
